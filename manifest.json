{
  "manifest_version": 2,
  "name": "Combine Tabs Extension",
  "version": "1.0",
  "background": {
    "scripts": ["./src/index.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./src/popup.html",
    "default_title": "Combine Tabs"
  },
  "permissions": [
    "tabs"
  ]
}
